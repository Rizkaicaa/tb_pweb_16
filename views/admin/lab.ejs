
    <%- include("../layouts/header.ejs") %>
    <%- include("../layouts/sidebarAdmin.ejs") %>

    <!-- ========== MAIN ========== -->
    <main class="content">
        <div class="header-content">
            <h3>Daftar Laboratorium</h3>
            <button class="button-tambah" onclick="openModal()" >Tambah Lab</button>
        </div>
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama Lab</th>
                    <th>Kepala Lab</th>
                    <th>Nama Kordas</th>
                    <th>Jumlah Asisten</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% labs.forEach((lab, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= lab.namaLab %></td>
                    <td><%= lab.kepalaLab %></td>
                    <td><%= lab.namaKordas %></td>
                    <td><%= lab.jumlahAsisten %></td>
                    <td>
                        <button onclick="window.location.href='/edit-lab/<%= lab.id %>'">Edit</button>
                        <button onclick="hapusLab()">Hapus</button>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        
<!-- The Modal -->
<div id="myModal" class="modal" style="
display: none;
position: fixed;
z-index: 1;
left: 0;
top: 0;
width: 100%;
height: 100%;
overflow: auto;
background-color: rgb(0, 0, 0);
background-color: rgba(0, 0, 0, 0.4);
">
<div class="modal-content" style="
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 10px;
">
    <span class="close" onclick="closeModal()" style="
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    ">&times;</span>
    <h3>Tambah Lab Baru</h3>
    <form id="tambahLabForm" action="/admin/tambah-lab" method="post">
        
        <label for="namaLab">Nama Lab:</label>
        <input type="text" id="namaLab" name="namaLab" required style="
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        ">
        
        <label for="kepalaLab">Kepala Lab:</label>
        <input type="text" id="kepalaLab" name="kepalaLab" required style="
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        ">
        
        <label for="namaKordas">Nama Kordas:</label>
        <input type="text" id="namaKordas" name="namaKordas" required style="
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        ">
        
        <label for="jumlahAsisten">Jumlah Asisten:</label>
        <input type="number" id="jumlahAsisten" name="jumlahAsisten" required style="
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        ">
        
        <button type="submit" style="
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        ">Tambah</button>
    </form>
</div>
</div>
</main>

<%- include("layouts/footer") %>

<script>
function openModal() {
document.getElementById("myModal").style.display = "block";
}

function closeModal() {
document.getElementById("myModal").style.display = "none";
}

document.querySelector('.button-tambah').addEventListener('mouseover', function() {
this.style.backgroundColor = '#d3541b';
});

document.querySelector('.button-tambah').addEventListener('mouseout', function() {
this.style.backgroundColor = '#E65F2B';
});

document.querySelector('.close').addEventListener('mouseover', function() {
this.style.color = 'black';
});

document.querySelector('.close').addEventListener('mouseout', function() {
this.style.color = '#aaa';
});
</script>
    
