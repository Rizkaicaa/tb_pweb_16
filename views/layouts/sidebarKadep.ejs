<!-- ========== SIDEBAR ========== -->
<aside class="sidebar">
  <button
    type="button"
    class="text-gray-500 hover:text-gray-600"
    data-hs-overlay="#docs-sidebar"
    aria-controls="docs-sidebar"
    aria-label="Toggle navigation"
  >
    <span class="sr-only">Toggle Navigation</span>
    <svg
      class="flex-shrink-0 size-4"
      width="16"
      height="16"
      fill="currentColor"
      viewBox="0 0 16 16"
    >
      <path
        fill-rule="evenodd"
        d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
      />
    </svg>
  </button>

  <div
    id="docs-sidebar"
    class="hs-overlay [--auto-close:lg] hs-overlay-open:translate-x-0 -translate-x-full transition-all duration-300 transform hidden fixed top-0 start-0 bottom-0 z-[60] w-64 w-64 bg-[#322C29] border-e border-gray-200 pt-7 pb-10 overflow-y-auto lg:block lg:translate-x-0 lg:end-auto lg:bottom-0 [&::-webkit-scrollbar]:w-2 [&::-webkit-scrollbar-thumb]:rounded-full [&::-webkit-scrollbar-track]:bg-gray-100 [&::-webkit-scrollbar-thumb]:bg-gray-300 dark:[&::-webkit-scrollbar-track]:bg-neutral-700 dark:[&::-webkit-scrollbar-thumb]:bg-neutral-500 dark:bg-neutral-800 dark:border-neutral-700"
  >
    <div class="px-6" style="text-align: center">
      <img
        src="/images/unand.png"
        alt="Logo UNAND"
        class="mx-auto w-16 h-16 mb-3"
        style="width: 150px; height: auto"
      />
      <div class="text-xl font-semibold dark:text-white">
        SIMALAB SI FTI UNAND
      </div>
    </div>

    <nav
      class="hs-accordion-group p-6 w-full flex flex-col flex-wrap"
      data-hs-accordion-always-open
    >
      <ul class="space-y-1.5">
        <li>
          <a
            href="/kadep/dashboard"
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm rounded-lg <% if(title === 'Dashboard') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/dashboard.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Dashboard
          </a>
        </li>

        <li>
          <a
            href="/kadep/lab"
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Data Laboratorium') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/data1.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Data Laboratorium
          </a>
        </li>

        <li>
          <a
            href="/kadep/dataaset"
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Aset Laboratorium') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/data2.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Aset Laboratorium
          </a>
        </li>

        <li>
          <a
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Pemeliharaan Aset') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/pemeliharaan.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Pemeliharaan Aset
          </a>
        </li>

        <li>
          <a
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Perbaikan Aset') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/perbaikan.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Permintaan Perbaikan Aset
          </a>
        </li>

        <li>
          <a href="/kadep/pengajuan"
            class="menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Pengajuan Pembelian') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
          >
            <img
              src="/images/pembelian.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Pengajuan Pembelian Aset
          </a>
        </li>

        <li class="hs-accordion" id="account-accordion">
          <button
            type="button"
            class="hs-accordion-toggle hs-accordion-active:text-blue-600 hs-accordion-active:hover:bg-transparent w-full text-start flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg hover:bg-[#E65F2B] dark:bg-[#E65F2B] dark:hover:bg-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-300 dark:hs-accordion-active:text-white"
          >
            <img
              src="/images/profile.png"
              alt="Laboratorium Icon"
              class="size-5"
            />
            Profile
            <svg
              class="hs-accordion-active:block ms-auto hidden size-4 text-gray-600 group-hover:text-gray-500 dark:text-neutral-400"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m18 15-6-6-6 6" />
            </svg>
            <svg
              class="hs-accordion-active:hidden ms-auto block size-4 text-gray-600 group-hover:text-gray-500 dark:text-neutral-400"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m6 9 6 6 6-6" />
            </svg>
          </button>

          <div
            id="account-accordion"
            class="hs-accordion-content w-full overflow-hidden transition-[height] duration-300 hidden"
          >
            <ul class="pt-2 ps-2">
              <li>
                <a
                  href="/kadep/profil"
                  class="sub-menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Profile') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
                >
                  <img
                    src="/images/lihat-profile.png"
                    alt="Laboratorium Icon"
                    class="size-5"
                  />
                  Lihat Profile
                </a>
              </li>
              <li>
                <a
                  href="/auth/ubahPassword"
                  class="sub-menu flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-700 rounded-lg <% if(title === 'Ubah Password') { %> bg-orange text-white <% } else { %> text-white hover:bg-orange <% } %>"
                >
                  <img
                    src="/images/ubah-password.png"
                    alt="Laboratorium Icon"
                    class="size-5"
                  />
                  Ubah Password
                </a>
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </nav>
  </div>
</aside>
